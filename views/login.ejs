<%- include("partials/header") -%> 

<body style="background-color: #cccccc;">
    <div class="container register-form" style="box-shadow:
    0 2.8px 2.2px rgba(0, 0, 0, 0.034),
    0 6.7px 5.3px rgba(0, 0, 0, 0.048),
    0 12.5px 10px rgba(0, 0, 0, 0.06),
    0 22.3px 17.9px rgba(0, 0, 0, 0.072),
    0 41.8px 33.4px rgba(0, 0, 0, 0.086),
    0 100px 80px rgba(0, 0, 0, 0.12);
    background-color: white;
    border-radius: 5px; height: 40%; position: relative; top: 40%; transform: translateY(-50%);">
    <% if (message.length > 0) { %>
    <h2><%= message %></h2>
    <% } %>
        <div class="row-9 justify-content-center" style="display: inline-flex; width: 100%;">
            <div class="col-4">
                <h1>Sign In</h1>
                <form action="/login" method="POST">
                    <div>
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                    </div>
                    <div>
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                <button class="btn btn-secondary" type="submit">Login</button>
                </form>
            </div>
            <div class="col-1 v-bar"></div>
            <div class="col-4">
                <h1>Sign Up</h1>
                <form action="/register" method="POST">
                    <div>
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="name" require>
                    </div>
                    <div>
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                    </div>
                    <div>
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="passowrd" name="password" required>
                    </div>
            
                    <button class="btn btn-secondary" type="submit">Create Account</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include("partials/footer") -%> 